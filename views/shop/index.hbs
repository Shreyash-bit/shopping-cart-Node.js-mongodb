<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
            {{successMsg}}
        </div>
    </div>
</div>

{{# each products }}
    <div class="row">
        {{# each this }}
        
            <div class="col-sm-6 col-md-4 mb-5">
                <div class="card" style="width: 28rem;">
                    <img src="{{ this.imagePath }}" class="card-img-top img-responsive" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><strong>{{ this.title }}</strong></h5>
                        <p class="card-text product-description">{{ this.description }}</p>
                        
                        <div>
                            <div class="price pull-left">${{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        
        {{/each}}
    </div>
{{/each}}


